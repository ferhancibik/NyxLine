<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NyxLine.MAUI.Views.ProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NyxLine.MAUI.Converters"
             x:Name="ProfilePageRoot"
             Title="Profil"
             BackgroundColor="#D8D8FF">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:ImagePathToVisibilityConverter x:Key="ImagePathToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <RefreshView x:Name="RefreshView" Refreshing="OnRefreshing" IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                
                <!-- Profile Header -->
                <Frame CornerRadius="15" 
                       Padding="20" 
                       BackgroundColor="White"
                       HasShadow="True">
                    <StackLayout Spacing="15">
                        
                        <Frame WidthRequest="150" 
                               HeightRequest="150" 
                               CornerRadius="75" 
                               Padding="0" 
                               HorizontalOptions="Center" 
                               IsClippedToBounds="True"
                               BackgroundColor="#f0f0f0">
                            <Image Source="{Binding User.ProfileImageUrl}" 
                                   Aspect="AspectFill" />
                        </Frame>
                        
                        <Label Text="{Binding User.FullName}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center" 
                               TextColor="#333" />
                        <Label Text="{Binding User.UserName}" 
                               FontSize="14" 
                               TextColor="#666" 
                               HorizontalOptions="Center" />
                        <Label Text="{Binding User.Bio}" 
                               FontSize="12" 
                               HorizontalOptions="Center" 
                               TextColor="#888" />
                        
                        <!-- Stats -->
                        <StackLayout Orientation="Horizontal" 
                                   HorizontalOptions="Center" 
                                   Spacing="30">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.PostsCount}" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       TextColor="#333" />
                                <Label Text="GÃ¶nderi" 
                                       FontSize="12" 
                                       HorizontalOptions="Center" 
                                       TextColor="#666" />
                            </StackLayout>
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.FollowersCount}" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       TextColor="#333" />
                                <Label Text="TakipÃ§i" 
                                       FontSize="12" 
                                       HorizontalOptions="Center" 
                                       TextColor="#666" />
                            </StackLayout>
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.FollowingCount}" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       TextColor="#333" />
                                <Label Text="Takip" 
                                       FontSize="12" 
                                       HorizontalOptions="Center" 
                                       TextColor="#666" />
                            </StackLayout>
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>
                
                <!-- Action Buttons -->
                <StackLayout Spacing="10">
                    <Button Text="Profili DÃ¼zenle" 
                            BackgroundColor="#007ACC"
                            TextColor="White"
                            CornerRadius="20"
                            Clicked="OnEditProfileClicked" />
                    
                    <Button Text="Åžifre DeÄŸiÅŸtir" 
                            BackgroundColor="#28a745"
                            TextColor="White"
                            CornerRadius="20"
                            Clicked="OnChangePasswordClicked" />
                    
                    <Button Text="Ã‡Ä±kÄ±ÅŸ Yap" 
                            BackgroundColor="#dc3545"
                            TextColor="White"
                            CornerRadius="20"
                            Clicked="OnLogoutClicked" />
                </StackLayout>

                <!-- My Posts Section -->
                <Frame CornerRadius="15" 
                       Padding="0" 
                       BackgroundColor="White"
                       HasShadow="True">
                    <StackLayout>
                        <!-- Header -->
                        <StackLayout Padding="20,15" BackgroundColor="#f8f9fa">
                            <Label Text="GÃ¶nderilerim" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#333" />
                        </StackLayout>

                        <!-- Posts List -->
                        <StackLayout x:Name="PostsContainer" Padding="0">
                            <!-- Loading Indicator -->
                            <StackLayout x:Name="LoadingIndicator" 
                                       IsVisible="{Binding IsLoadingPosts}"
                                       Padding="40">
                                <ActivityIndicator IsRunning="{Binding IsLoadingPosts}" 
                                                 Color="#007ACC" 
                                                 WidthRequest="30" 
                                                 HeightRequest="30"
                                                 HorizontalOptions="Center" />
                                <Label Text="GÃ¶nderiler yÃ¼kleniyor..." 
                                       TextColor="#666" 
                                       HorizontalOptions="Center" 
                                       Margin="10,0,0,0" />
                            </StackLayout>

                            <!-- No Posts Message -->
                            <StackLayout x:Name="NoPostsMessage" 
                                       IsVisible="{Binding HasNoPosts}"
                                       Padding="40">
                                <Label Text="ðŸ˜”" 
                                       FontSize="40" 
                                       HorizontalOptions="Center" />
                                <Label Text="HenÃ¼z hiÃ§ gÃ¶nderin yok" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="#666" 
                                       HorizontalOptions="Center" />
                                <Label Text="Ä°lk gÃ¶nderinizi oluÅŸturmak iÃ§in GÃ¶nderi sekmesine gidin!" 
                                       FontSize="12" 
                                       TextColor="#888" 
                                       HorizontalOptions="Center" 
                                       Margin="0,5,0,0" />
                            </StackLayout>

                            <!-- Posts Collection -->
                            <CollectionView x:Name="PostsCollectionView" 
                                          ItemsSource="{Binding MyPosts}"
                                          IsVisible="{Binding HasPosts}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Padding="0" Margin="0,0,0,1" BackgroundColor="#f0f0f0">
                                            <Frame CornerRadius="0" 
                                                   Padding="20" 
                                                   BackgroundColor="White"
                                                   HasShadow="False">
                                                <StackLayout Spacing="15">
                                                    
                                                    <!-- Post Header -->
                                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                                        <Frame WidthRequest="40" 
                                                               HeightRequest="40" 
                                                               CornerRadius="20" 
                                                               Padding="0" 
                                                               IsClippedToBounds="True"
                                                               BackgroundColor="#f0f0f0">
                                                            <Image Source="{Binding Source={x:Reference Name=ProfilePageRoot}, Path=BindingContext.User.ProfileImageUrl}" 
                                                                   Aspect="AspectFill" />
                                                        </Frame>
                                                        
                                                        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                                            <Label Text="{Binding Source={x:Reference Name=ProfilePageRoot}, Path=BindingContext.User.UserName}" 
                                                                   FontSize="14" 
                                                                   FontAttributes="Bold" 
                                                                   TextColor="#262626" />
                                                            <Label Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}" 
                                                                   FontSize="12" 
                                                                   TextColor="#8e8e8e" />
                                                        </StackLayout>

                                                        <!-- Delete Button -->
                                                        <Button Text="ðŸ—‘ï¸" 
                                                                BackgroundColor="#dc3545"
                                                                TextColor="White"
                                                                CornerRadius="20"
                                                                WidthRequest="40"
                                                                HeightRequest="40"
                                                                FontSize="16"
                                                                Clicked="OnDeletePostClicked"
                                                                CommandParameter="{Binding Id}" />
                                                    </StackLayout>
                                                    
                                                    <!-- Post Content -->
                                                    <Label Text="{Binding Content}" 
                                                           FontSize="14" 
                                                           TextColor="#262626"
                                                           IsVisible="{Binding Content, Converter={StaticResource StringToVisibilityConverter}}" />
                                                    
                                                    <!-- Post Image -->
                                                    <Frame CornerRadius="10" 
                                                           Padding="0" 
                                                           IsClippedToBounds="True" 
                                                           HasShadow="False"
                                                           IsVisible="{Binding ImagePath, Converter={StaticResource ImagePathToVisibilityConverter}}">
                                                        <Image Source="{Binding PostImageUrl}" 
                                                               HeightRequest="400" 
                                                               WidthRequest="400"
                                                               Aspect="AspectFill" />
                                                    </Frame>

                                                    <!-- Repost Content -->
                                                    <Frame CornerRadius="10"
                                                           Padding="15"
                                                           IsClippedToBounds="True"
                                                           HasShadow="False"
                                                           BorderColor="#e0e0e0"
                                                           IsVisible="{Binding IsRepost}">
                                                        <StackLayout Spacing="10">
                                                            <Label Text="{Binding OriginalPost.UserFullName}"
                                                                   FontSize="14"
                                                                   FontAttributes="Bold"
                                                                   TextColor="#262626"/>
                                                            <Label Text="{Binding OriginalPost.Content}"
                                                                   FontSize="14"
                                                                   TextColor="#262626"/>
                                                            <Frame CornerRadius="10"
                                                                   Padding="0"
                                                                   IsClippedToBounds="True"
                                                                   HasShadow="False"
                                                                   IsVisible="{Binding OriginalPost.HasImage}">
                                                                <Image Source="{Binding OriginalPost.PostImageUrl}"
                                                                       HeightRequest="400"
                                                                       WidthRequest="400"
                                                                       Aspect="AspectFill"/>
                                                            </Frame>
                                                        </StackLayout>
                                                    </Frame>

                                                    <!-- Post Actions -->
                                                    <StackLayout Orientation="Horizontal" Spacing="20">
                                                        <Label Text="{Binding LikesCount, StringFormat='â¤ï¸ {0}'}" 
                                                               FontSize="12" 
                                                               TextColor="#8e8e8e" />
                                                        <Label Text="{Binding IsRepost, StringFormat='ðŸ”„ Repost'}"
                                                               FontSize="12"
                                                               TextColor="#8e8e8e"
                                                               IsVisible="{Binding IsRepost}"/>
                                                        <Label Text="{Binding Id, StringFormat='Post #{0}'}" 
                                                               FontSize="12" 
                                                               TextColor="#8e8e8e" />
                                                    </StackLayout>
                                                    
                                                </StackLayout>
                                            </Frame>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>
    </RefreshView>
    
</ContentPage> 