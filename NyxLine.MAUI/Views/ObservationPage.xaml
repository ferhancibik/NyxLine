    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Konum Bilgisi -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“ Konumunuz"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4B0082"/>
                    
                    <Label Text="YakÄ±nÄ±nÄ±zdaki gÃ¶zlem noktalarÄ±nÄ± bulmak iÃ§in konumunuzu paylaÅŸÄ±n"
                           FontSize="14"
                           TextColor="#666666"/>
                    
                    <Picker Title="GÃ¶zlem ZamanÄ± SeÃ§in"
                            TextColor="#4B0082"
                            TitleColor="#666666"
                            BackgroundColor="Transparent"
                            ItemsSource="{Binding ObservationTimes}"
                            SelectedItem="{Binding SelectedTime}"
                            Margin="0,5,0,5"/>
                    
                    <Button Text="Konumu Al"
                            Command="{Binding GetLocationCommand}"
                            BackgroundColor="#007ACC"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="40"/>
                </VerticalStackLayout>
            </Frame>

            <!-- YakÄ±ndaki GÃ¶zlem NoktalarÄ± -->
            <Label Text="ðŸ”­ GÃ¶zlem NoktalarÄ±"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#4B0082"
                   Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding NearbySites}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               Margin="0,0,0,10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenSiteDetailsCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#4B0082"/>
                                
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding DistanceFromCity, StringFormat='{0:F1} km'}"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       Margin="0,5"/>
                                
                                <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                           Orientation="Horizontal"
                                           Spacing="10">
                                    <Label Text="{Binding BestTimeToVisit}"
                                           FontSize="12"
                                           TextColor="#007ACC"/>
                                    
                                    <Label Text="{Binding Altitude, StringFormat='{0}m'}"
                                           FontSize="12"
                                           TextColor="#007ACC"/>
                                    
                                    <Label Text="{Binding LightPollution, StringFormat='Bortle: {0}'}"
                                           FontSize="12"
                                           TextColor="#007ACC"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Ã–nerilen Ekipmanlar -->
            <Label Text="ðŸŽ¯ Ã–nerilen Ekipmanlar"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#4B0082"
                   Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding RecommendedEquipment}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               Margin="0,0,0,10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#4B0082"/>
                                
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                
                                <Label Text="{Binding Purpose}"
                                       FontSize="12"
                                       TextColor="#007ACC"/>
                                
                                <CollectionView ItemsSource="{Binding Tips}"
                                              IsVisible="{Binding Tips, Converter={StaticResource ListNotEmptyConverter}}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding .}"
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   Margin="10,0,0,0"/>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- GÃ¶zlem Ä°puÃ§larÄ± -->
            <Label Text="ðŸ’¡ GÃ¶zlem Ä°puÃ§larÄ±"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#4B0082"
                   Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding ObservationTips}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               Margin="0,0,0,10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Image Grid.Column="0"
                                       Source="{Binding Icon}"
                                       HeightRequest="30"
                                       WidthRequest="30"
                                       Margin="0,0,10,0"/>
                                
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="{Binding Title}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#4B0082"/>
                                    
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="#666666"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 