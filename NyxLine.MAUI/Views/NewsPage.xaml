<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NyxLine.MAUI.Views.NewsPage"
             Title="GÃ¶kyÃ¼zÃ¼nden Haberler"
             BackgroundColor="#D8D8FF">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Admin iÃ§in haber ekleme butonu -->
        <Button Grid.Row="0" 
                Text="Haber Ekle" 
                IsVisible="{Binding IsAdmin}"
                Command="{Binding AddNewsCommand}"
                Margin="10,5"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"/>
        
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}" 
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding News}"
                          RemainingItemsThreshold="2"
                          RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               CornerRadius="10"
                               Margin="10,5"
                               Padding="15">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <!-- Haber BaÅŸlÄ±ÄŸÄ± -->
                                <Label Grid.Row="0"
                                       Text="{Binding NewsTitle}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       Margin="0,0,0,10"/>
                                
                                <!-- Haber Ä°Ã§eriÄŸi -->
                                <Label Grid.Row="1"
                                       Text="{Binding Content}"
                                       FontSize="16"
                                       Margin="0,0,0,10"/>
                                
                                <!-- Haber GÃ¶rseli -->
                                <Image Grid.Row="2"
                                       Source="{Binding PostImageUrl}"
                                       HeightRequest="200"
                                       Aspect="AspectFill"
                                       IsVisible="{Binding HasImage}"
                                       Margin="0,0,0,10"/>
                                
                                <!-- Haber DetaylarÄ± -->
                                <Grid Grid.Row="3" 
                                      ColumnDefinitions="Auto,*,Auto">
                                    <!-- Yazar Profil Resmi -->
                                    <Frame Grid.Column="0"
                                           HeightRequest="40"
                                           WidthRequest="40"
                                           CornerRadius="20"
                                           Padding="0"
                                           IsClippedToBounds="True"
                                           BorderColor="LightGray"
                                           IsVisible="{Binding HasUserProfileImage}">
                                        <Image Source="{Binding UserProfileImage}"
                                               Aspect="AspectFill"/>
                                    </Frame>
                                    
                                    <!-- Yazar Bilgileri -->
                                    <VerticalStackLayout Grid.Column="1"
                                                       Margin="10,0">
                                        <Label Text="{Binding UserFullName}"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    </VerticalStackLayout>
                                    
                                    <!-- BeÄŸeni SayÄ±sÄ± -->
                                    <HorizontalStackLayout Grid.Column="2"
                                                         Spacing="5">
                                        <ImageButton Source="{Binding LikeImageSource}"
                                                    HeightRequest="24"
                                                    WidthRequest="24"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LikeCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        <Label Text="{Binding LikeCount}"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </Grid>
                                
                                <!-- Admin iÃ§in silme butonu -->
                                <Button Grid.Row="4"
                                        Text="Sil"
                                        IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsAdmin}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeletePostCommand}"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        HeightRequest="30"
                                        Margin="0,10,0,0"
                                        HorizontalOptions="End"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <!-- BoÅŸ Durum -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Spacing="20"
                                       Padding="20">
                        <Label Text="ðŸ“°"
                               FontSize="48"
                               HorizontalOptions="Center"/>
                        <Label Text="HenÃ¼z haber yok!"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage> 