<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NyxLine.MAUI.Views.UserProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NyxLine.MAUI.Converters"
             x:Name="UserProfilePageRoot"
             Title="{Binding User.UserName}"
             BackgroundColor="#f5f5f5">

    <RefreshView IsRefreshing="{Binding IsRefreshing}" 
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">

                <!-- User Info Card -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="20"
                       HasShadow="True">
                    <StackLayout Spacing="15">

                        <!-- Profile Image and Basic Info -->
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame WidthRequest="80" 
                                   HeightRequest="80" 
                                   CornerRadius="40" 
                                   Padding="0" 
                                   IsClippedToBounds="True"
                                   BackgroundColor="#f0f0f0">
                                <Image Source="{Binding User.ProfileImageUrl}" 
                                       Aspect="AspectFill" />
                            </Frame>

                            <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand" Spacing="5">
                                <Label Text="{Binding User.FullName}" 
                                       FontAttributes="Bold" 
                                       FontSize="18" />
                                <Label Text="{Binding User.UserName}" 
                                       FontSize="14" 
                                       TextColor="#666" />
                                <Label Text="{Binding User.Bio}" 
                                       FontSize="14" 
                                       TextColor="#333"
                                       IsVisible="{Binding User.Bio, Converter={StaticResource StringToVisibilityConverter}}" />
                            </StackLayout>
                        </StackLayout>

                        <!-- Stats -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="Center" 
                                     Spacing="30">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.PostsCount}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="GÃ¶nderi" 
                                       FontSize="12" 
                                       TextColor="#666" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.FollowersCount}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="TakipÃ§i" 
                                       FontSize="12" 
                                       TextColor="#666" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="{Binding User.FollowingCount}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       HorizontalTextAlignment="Center" />
                                <Label Text="Takip" 
                                       FontSize="12" 
                                       TextColor="#666" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </StackLayout>

                        <!-- Follow Button -->
                        <Button Text="{Binding User.IsFollowedByCurrentUser, Converter={StaticResource FollowButtonTextConverter}}"
                                BackgroundColor="{Binding User.IsFollowedByCurrentUser, Converter={StaticResource FollowButtonColorConverter}}"
                                TextColor="White"
                                CornerRadius="20"
                                FontAttributes="Bold"
                                Command="{Binding ToggleFollowCommand}"
                                Margin="0,10,0,0" />

                    </StackLayout>
                </Frame>

                <!-- Posts Section -->
                <StackLayout IsVisible="{Binding HasPosts}">
                    <Label Text="GÃ¶nderiler" 
                           FontAttributes="Bold" 
                           FontSize="18" 
                           TextColor="#007ACC" 
                           Margin="0,10,0,10" />

                    <CollectionView ItemsSource="{Binding UserPosts}" 
                                    VerticalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,0,0,15">
                                    <Frame BackgroundColor="White" 
                                           CornerRadius="15" 
                                           Padding="15"
                                           HasShadow="True">
                                        <StackLayout Spacing="10">

                                            <!-- User info in post -->
                                            <StackLayout Orientation="Horizontal" Spacing="10">
                                                <Frame WidthRequest="40" 
                                                       HeightRequest="40" 
                                                       CornerRadius="20" 
                                                       Padding="0" 
                                                       IsClippedToBounds="True"
                                                       BackgroundColor="#f0f0f0">
                                                    <Image Source="{Binding Source={x:Reference Name=UserProfilePageRoot}, Path=BindingContext.User.ProfileImageUrl}" 
                                                           Aspect="AspectFill" />
                                                </Frame>

                                                <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                                    <Label Text="{Binding Source={x:Reference Name=UserProfilePageRoot}, Path=BindingContext.User.UserName}" 
                                                           FontAttributes="Bold" 
                                                           FontSize="14" />
                                                    <Label Text="{Binding CreatedAt, StringFormat='{0:dd MMM yyyy HH:mm}'}" 
                                                           FontSize="12" 
                                                           TextColor="#666" />
                                                </StackLayout>
                                            </StackLayout>

                                            <!-- Post content -->
                                            <Label Text="{Binding Content}" 
                                                   FontSize="14" 
                                                   LineBreakMode="WordWrap" />

                                            <!-- Post image -->
                                            <Image Source="{Binding PostImageUrl}" 
                                                   Aspect="AspectFit"
                                                   MaximumHeightRequest="300"
                                                   IsVisible="{Binding ImagePath, Converter={StaticResource StringToVisibilityConverter}}" />

                                            <!-- Like count -->
                                            <StackLayout Orientation="Horizontal" 
                                                         IsVisible="{Binding LikeCount, Converter={StaticResource PositiveNumberToVisibilityConverter}}">
                                                <Label Text="â¤ï¸" FontSize="12" />
                                                <Label Text="{Binding LikeCount}" 
                                                       FontSize="12" 
                                                       TextColor="#666" />
                                                <Label Text="beÄŸeni" 
                                                       FontSize="12" 
                                                       TextColor="#666" />
                                            </StackLayout>

                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- No Posts Message -->
                <StackLayout IsVisible="{Binding HasNoPosts}" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             Margin="0,50,0,0">
                    <Label Text="ðŸ“" 
                           FontSize="48" 
                           HorizontalTextAlignment="Center" />
                    <Label Text="HenÃ¼z gÃ¶nderi yok" 
                           FontSize="16" 
                           TextColor="#666" 
                           HorizontalTextAlignment="Center" 
                           Margin="0,10,0,0" />
                    <Label Text="Bu kullanÄ±cÄ± henÃ¼z bir gÃ¶nderi paylaÅŸmamÄ±ÅŸ." 
                           FontSize="14" 
                           TextColor="#999" 
                           HorizontalTextAlignment="Center" 
                           Margin="0,5,0,0" />
                </StackLayout>

                <!-- Loading Indicator -->
                <StackLayout IsVisible="{Binding IsLoading}" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             Margin="0,50,0,0">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                       Color="#007ACC" />
                    <Label Text="YÃ¼kleniyor..." 
                           FontSize="14" 
                           TextColor="#666" 
                           HorizontalTextAlignment="Center" 
                           Margin="0,10,0,0" />
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage> 