<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NyxLine.MAUI.Views.CreatePostPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Yeni Gönderi"
             BackgroundColor="#f5f5f5">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Shadow Style -->
            <Style x:Key="ShadowFrame" TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <StackLayout Spacing="20" Padding="20">
            
            <!-- Header Section -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <!-- Profile Image -->
                    <Frame WidthRequest="50" 
                           HeightRequest="50" 
                           CornerRadius="25" 
                           Padding="2"
                           BackgroundColor="#f0f0f0"
                           HasShadow="False">
                        <Frame CornerRadius="23" Padding="0" IsClippedToBounds="True">
                            <Image x:Name="UserProfileImage"
                                   Source="https://via.placeholder.com/50x50/cccccc/ffffff?text=👤"
                                   Aspect="AspectFill" />
                        </Frame>
                    </Frame>
                    
                    <!-- User Info -->
                    <StackLayout VerticalOptions="Center" Spacing="2">
                        <Label x:Name="UserNameLabel"
                               Text="Kullanıcı Adı"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label Text="Yeni bir gönderi oluştur"
                               FontSize="14"
                               TextColor="#666" />
                    </StackLayout>
                </StackLayout>
            </Frame>
            
            <!-- Content Section -->
            
                <!-- Text Input Card -->
                <Frame Style="{StaticResource ShadowFrame}">
                    <StackLayout Padding="20" Spacing="15">
                        
                        <Label Text="Ne paylaşmak istiyorsun?"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        
                        <Editor x:Name="ContentEditor"
                                Placeholder="Düşüncelerini paylaş..."
                                Text="{Binding Content}"
                                HeightRequest="120"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                TextChanged="OnContentChanged" />
                        
                        <!-- Character Counter -->
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                            <Label x:Name="CharacterCountLabel"
                                   Text="0/500"
                                   FontSize="12"
                                   TextColor="#888" />
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>
                
                <!-- Image Section -->
                <Frame Style="{StaticResource ShadowFrame}">
                    <StackLayout Padding="20" Spacing="15">
                        
                        <Label Text="Fotoğraf Ekle"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        
                        <!-- Image Preview or Upload Button -->
                        <StackLayout x:Name="ImageUploadArea">
                            
                            <!-- Upload Button (when no image selected) -->
                            <Frame x:Name="UploadButton"
                                   BackgroundColor="#f8f9fa"
                                   BorderColor="#e9ecef"
                                   CornerRadius="10"
                                   Padding="30"
                                   HasShadow="False">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSelectImageClicked" />
                                </Frame.GestureRecognizers>
                                <StackLayout HorizontalOptions="Center" Spacing="10">
                                    <Label Text="📷" 
                                           FontSize="40" 
                                           HorizontalOptions="Center" />
                                    <Label Text="Fotoğraf seç" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#007ACC"
                                           HorizontalOptions="Center" />
                                    <Label Text="Galerinizden bir fotoğraf seçin" 
                                           FontSize="12" 
                                           TextColor="#888"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>
                            
                            <!-- Image Preview (when image selected) -->
                            <StackLayout x:Name="ImagePreviewArea" IsVisible="False" Spacing="10">
                                <Frame CornerRadius="15" 
                                       Padding="0" 
                                       IsClippedToBounds="True"
                                       HasShadow="True">
                                    <Image x:Name="SelectedImage" 
                                           HeightRequest="250"
                                           Aspect="AspectFill" />
                                </Frame>
                                
                                <!-- Image Actions -->
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                                    <Button Text="🔄 Değiştir"
                                            BackgroundColor="#6c757d"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Padding="15,10"
                                            Clicked="OnSelectImageClicked" />
                                    <Button Text="🗑️ Kaldır"
                                            BackgroundColor="#dc3545"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Padding="15,10"
                                            Clicked="OnRemoveImageClicked" />
                                </StackLayout>
                            </StackLayout>
                            
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>
                
                <!-- Post Button -->
                <Frame Style="{StaticResource ShadowFrame}">
                    <StackLayout Padding="20">
                        
                        <Button x:Name="PostButton"
                                Text="📝 Gönderisini Paylaş"
                                BackgroundColor="#007ACC"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="55"
                                FontSize="18"
                                FontAttributes="Bold"
                                Clicked="OnPostClicked"
                                IsEnabled="{Binding IsNotBusy}" />
                        
                        <!-- Loading Indicator -->
                        <StackLayout x:Name="LoadingArea" 
                                   IsVisible="{Binding IsBusy}" 
                                   Orientation="Horizontal" 
                                   HorizontalOptions="Center"
                                   Spacing="10"
                                   Margin="0,15,0,0">
                            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                                             IsRunning="{Binding IsBusy}"
                                             Color="#007ACC"
                                             WidthRequest="20"
                                             HeightRequest="20" />
                            <Label Text="Gönderiliyor..."
                                   FontSize="14"
                                   TextColor="#007ACC"
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>
                
            </StackLayout>
    </ScrollView>
</ContentPage> 